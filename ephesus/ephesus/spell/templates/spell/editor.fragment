<div name="verses-content">
  {% if verses is none() or verses|length == 0 %}
  <p>Select a Book and Chapter to load its contents.</p>
  {% else %}
  <h2>{{ ref }}</h2>
  {% for verse in verses %}
  <div>
    <span class="bold verse-number">{{ verse[0] }}</span>
    <span data-ref="{{ ref }}" class="verse" contenteditable="true"
      >{{ verse[1] }}</span
    >
    {% endfor %}
  </div>
  {% endif %}
</div>
